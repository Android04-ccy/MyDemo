<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.administrator.mydemo.Home.Home">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tb_home"
        android:background="@color/tb_home"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"

            />
        <TextView
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安卓易手机管家"
            android:gravity="center"
            android:textSize="30sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_child_configs"
            />
    </android.support.v7.widget.Toolbar>
    <GridView
        android:layout_marginTop="100dp"

        android:layout_below="@id/tb_home"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="3"
        android:verticalSpacing="30dp"
        android:gravity="center"
        android:columnWidth="180dp"
        android:id="@+id/home_gv"

        ></GridView>




</RelativeLayout>
