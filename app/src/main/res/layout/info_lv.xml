<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <ImageView
android:layout_width="60dp"
android:layout_height="55dp"


android:id="@+id/info_iv"

android:layout_alignParentLeft="true"
android:layout_alignParentStart="true" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"

android:textSize="16dp"
android:id="@+id/info_tv1"

    android:layout_alignParentTop="true"
    android:layout_alignLeft="@+id/info_tv2"
    android:layout_alignStart="@+id/info_tv2" />
 <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"

android:textSize="16dp"
android:id="@+id/info_tv2"
     android:layout_alignBottom="@+id/info_iv"
     android:layout_toRightOf="@+id/info_iv"
     android:layout_toEndOf="@+id/info_iv"
     android:layout_marginLeft="29dp"
     android:layout_marginStart="29dp" />
</RelativeLayout>